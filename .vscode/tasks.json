{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "build",
      "group": "build",
      "label": "Vite: build",
      "detail": "Build for production."
    },
    {
      "type": "npm",
      "script": "preview",
      "label": "Vite: preview",
      "detail": "Locally preview production build."
    },
    {
      "type": "npm",
      "script": "dev",
      "label": "Vite: dev",
      "detail": "Start dev server, aliases: `vite dev`, `vite serve`.",
      "problemMatcher": []
    },
    {
      "type": "npm",
      "script": "install",
      "label": "NPM install",
      "detail": "Install dependencies from package."
    },
    {
      "type": "docker-build",
      "label": "Docker: Build Only",
      "platform": "node",
      "dockerBuild": {
        "tag": "Gesugao-san/proxima.fun",
        "dockerfile": "${workspaceFolder}/Dockerfile",
        "context": "${workspaceFolder}",
        "pull": true,
      }
    },
    {
      "type": "docker-run",
      "label": "Docker: Build Container (release)",
      "dependsOn": [
        "docker-build"
      ],
      "dockerRun": {
        "image": "Gesugao-san/proxima.fun",
        "containerName": "proxima.fun",
        "ports": [{
          "containerPort": 8080,
          "hostPort": 8080,
          "protocol": "tcp",
        }]
      },
      "platform": "node"
    },
    {
      "type": "docker-run",
      "label": "Docker: Build Container (debug)",
      "dependsOn": [
        "docker-build"
      ],
      "dockerRun": {
        "image": "Gesugao-san/proxima.fun",
        "containerName": "proxima.fun",
        "ports": [{
          "containerPort": 8080,
          "hostPort": 8080,
          "protocol": "tcp",
        }],
        "env": {
          "DEBUG": "*",
          "NODE_ENV": "development"
        }
      },
      "node": {
        "enableDebugging": true
      }
    }
  ]
}
