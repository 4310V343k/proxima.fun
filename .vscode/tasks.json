{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Vite: build",
      "detail": "Build for production.",
      "type": "npm",
      "script": "build",
      "group": "build",
      "problemMatcher": []
    }, {
      "label": "Vite: preview",
      "detail": "Locally preview production build.",
      "type": "npm",
      "script": "preview",
      "problemMatcher": []
    }, {
      "label": "Vite: dev",
      "detail": "Start dev server, aliases: `vite dev`, `vite serve`.",
      "type": "npm",
      "script": "dev",
      "problemMatcher": []
    },

    {
      "label": "Docker: Compile Build",
      "detail": "Create Docker Build.",
      "type": "docker-build",
      "platform": "node",
      "dockerBuild": {
        "tag": "gesugaosan/proxima.fun:latest",
        "dockerfile": "${workspaceFolder}/Dockerfile",
        "context": "${workspaceFolder}",
        "pull": true,
      }
    },

    {
      "label": "Docker: Compile Container (production)",
      "detail": "Create Docker Container. Requires Docker Build!",
      "type": "docker-run",
      "dependsOn": ["docker-build"],
      "dockerRun": {
        "image": "gesugaosan/proxima.fun",
        "containerName": "proxima.fun",
        "ports": [{
          "containerPort": 80,
          "hostPort": 80,
          "protocol": "tcp",
        },{
          "containerPort": 443,
          "hostPort": 443,
          "protocol": "tcp",
        }],
        "env": {
          //"DEBUG": "*",
          "NODE_ENV": "production"
        }
      },
      "node": {
        "enableDebugging": false,
      },
      "platform": "node"
    }
  ]
}
